    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: black;
            background-color: #f8f9fa;
        }

      .navbar {
            background-color: #F4C524;
            padding: 10px;
        }

      .navbar-brand img {
            width: 50px;
            height: auto;
            margin-right: 10px;
        }

      .search-input {
            width: 300px;
            margin-right: 10px;
        }

      .nav-link {
            color: black;
        }

      .nav-link:hover {
            color: #0062cc;
        }
