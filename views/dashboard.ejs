<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resep Kuy</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: black;
            background-color: #f8f9fa;
        }

      .navbar {
            background-color: #F4C524;
            padding: 10px;
        }

      .navbar-brand img {
            width: 50px;
            height: auto;
            margin-right: 10px;
        }

      .search-input {
            width: 300px;
            margin-right: 10px;
        }

      .nav-link {
            color: black;
        }

      .nav-link:hover {
            color: #0062cc;
        }
        .profile-pic {
  position: relative;
  top: 10px;
  right: 20px;
}

.profile-img {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  object-fit: cover;
}
.card {
  display: flex;
  flex-basis: calc(50% - 20px);
  flex-shrink: 0;
  margin-bottom: 20px;
}

.card:nth-child(3n+4) {
  margin-right: 0;
}

.card:nth-child(n+4) {
  display: none;
}

.card:nth-child(-n+3) {
  display: flex;
}
.row {
  display: flex;
  justify-content: center;
}

    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container-fluid justify-content-between">
            <a class="navbar-brand" href="#"><img src="logo.png" alt="Logo ResepKuy"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
           
            <form class="d-flex">
                <input class="form-control me-2 search-input" id="search-input"  type="search" placeholder="Cari resep..." aria-label="Search">
                <button class="btn btn-outline-dark" id="search-button" type="submit">Cari</button>
            </form> 

        <!-- Button trigger modal -->
        <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
        </svg>Tulis Resep
        </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Resep</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">pi</button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
              <form action="/recipes" method="POST" enctype="multipart/form-data">
                <label for="title_recipe"  name="title_recipe" class="form-label">Nama Resep : </label>
                <input type="text" class="form-control" name="title_recipe" id="title_recipe" placeholder="masukkan nama resep anda">
              </div>
              <div class="mb-3">
                <label for="description_recipe" name="description_recipe" class="form-label">Deskripsi Resep : </label>
                <textarea class="form-control" id="description_recipe "  name="description_recipe" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label for="ingredients_recipe" name="ingredients_recipe" class="form-label">Bahan Bahan : </label>
                <textarea class="form-control" id="ingredients_recipe"  name="ingredients_recipe" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label for="instructions_recipe" name="instructions_recipe" class="form-label">Langkah Pembuatan : </label>
                <textarea class="form-control" id="instructions_recipe"  name="instructions_recipe" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label for="formFile" name="image_recipe" class="form-label">Masukkan foto resep : </label>
                <input class="form-control" type="file" name="image_recipe" id="formFile">
              </div>  
            <select class="form-select" aria-label="Default select example" name="category_id">
              <option selected>Pilih kategori resep</option>
              <% categories.forEach(categori => { %>
                <option value="<%= categori.id_categori %>"><%= categori.name_categori%></option>
              <% }); %>
            </select>

            <input type="hidden" id="user_id" name="user_id" value="<%= id_user %>">
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>
              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
       <div class="profile-pic">
                  <img src="profile.png" alt="Foto Profil" class="profile-img">
                <div class="col">
                    <%= username %>    
                </div>
        </div>
    </nav>

            
       </div>
        </div>

        <!-- card resep -->
        <% recipes.forEach(recipe => { %>
        <div class="row mt-4">
          <div class="col-md-4">
            <div class="card">
                    <img src="<%= recipe.image_recipe %>" class="card-img-top" alt="Resep 1">
                    <div class="card-body">
                        <h5 class="recipe-title card-title"><%= recipe.title_recipe %></h5>
                        <p class="recipe-text card-text"><%= recipe.description_recipe %></p>
                       <a href="/recipes/detail/<%= recipe.id_recipe %>" class="btn btn-dark">Lihat Resep</a>
                        <p style="color:black"></p>
                    </div>
                  </div>
                </div>
                
              </div>
              <% }); %>
        

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search-input');
  const searchButton = document.getElementById('search-button');
  const recipeCards = document.querySelectorAll('.card');

  const searchRecipes = (searchTerm) => {
    recipeCards.forEach(card => {
      const recipeTitle = card.querySelector('.recipe-title').innerText.toLowerCase();
      const recipeText = card.querySelector('.recipe-text').innerText.toLowerCase();
      const cardContainer = card.parentElement.parentElement;

      if (recipeTitle.includes(searchTerm) || recipeText.includes(searchTerm)) {
        cardContainer.style.display = 'block';
      } else {
        cardContainer.style.display = 'none';
      }
    });
  };

  searchInput.addEventListener('input', function() {
    const searchTerm = searchInput.value.toLowerCase();
    searchRecipes(searchTerm);
  });
});
</script> 

    
</body>

</html>